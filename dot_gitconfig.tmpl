[user]
    name = {{ .gitUser }}
    email = {{ .gitEmail }}

[core]
    editor = nvim
    autocrlf = input

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[color]
    ui = auto

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate --all
    last = log -1 HEAD
    unstage = reset HEAD --
    amend = commit --amend --no-edit

[credential]
    helper = cache --timeout=3600
{{- if lookPath "gh" }}

[credential "https://github.com"]
	helper = 
	helper = !{{ lookPath "gh" }} auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !{{ lookPath "gh" }} auth git-credential
{{- end }}
